<!DOCTYPE html>
<html lang="en">
<head>
    <title>Product Page</title>
    <style>
        body {
            font-family: Arial;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1100px;
            margin: 30px;
        }

        h1{
               color: #333333;
        }

        h2 {
            color: #333333;
        }

        .product-grid {
            display: grid;
            gap: 20px;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        }

        .product-card {
            background-color: #ffffff;
            border-radius: 8px;
            padding: 15px;
        }

        img {
            width: 100%;
            height: 180px;
            object-fit: cover;
        }

        .product-name {
            font-weight: bold;
            color: #222222;
        }

        .product-price {
            color: #27ae60;
            font-weight: bold;
        }

        .product-short-details {
            color: #666666;
        }

        .details-link {
            color: #3498db;
        }

        .form-card {
            background-color: #ffffff;
            padding: 20px;
        }

        .form-row {
            display: flex;
            flex-direction: column;
            margin-bottom: 10px;
        }

        label {
            color: #444444;
        }

        input{
           padding: 8px;
        }

         textarea {
            padding: 8px;
        }

        textarea {
            min-height: 70px;
        }

        .btn {
            background-color: #3498db;
            color: #ffffff;
            padding: 10px;
            border: none;
            cursor: pointer;
        }

        .product-details {
            background-color: #ffffff;
            padding: 20px;
        }

        .product-details-price {
            color: #27ae60;
            font-weight: bold;
        }

        .product-details-text {
            color: #555555;
        }
    </style>
</head>
<body>
<div class="container">

    <h1>All Products</h1>
    <div class="product-grid">
        {% for product in products %}
            <div class="product-card">
             <img src="{{ product['image_url'] }}" alt="product"/>
                        <div class="product-name">{{ product['name'] }}</div>

                        <div class="product-price">{{ product['price'] }}$</div>

                        <div class="product-short-details">
                            {{ product['short_description'] }}
                        </div>
                <a class="details-link" href="/product/{{ product.id }}">View Details</a>
            </div>
        {% endfor %}
    </div>

    <h2>Add a New Product</h2>
    <div class="form-card">
        <form action="/add" method="post">
            <div class="form-row">
                <label>Product Name</label>
                <input type="text" name="name" required/>
            </div>

            <div class="form-row">
                <label>Price</label>
                <input type="number" name="price" step="0.01" required/>
            </div>

            <div class="form-row">
                <label>Image URL</label>
                <input type="text" name="image_url"/>
            </div>

            <div class="form-row">
                <label>Short Description</label>
                <textarea name="short_description"></textarea>
            </div>

            <div class="form-row">
                <label>Full Description</label>
                <textarea name="full_description"></textarea>
            </div>

            <button class="btn" type="submit">Add Product</button>
        </form>
    </div>

    {% if selected_product %}
        <h2>Product Details</h2>
        <div class="product-details">
            <img src="{{ selected_product.image_url or 'placeholder.png' }}" alt="product"/>
            <h2>{{ selected_product.name }}</h2>
            <div class="product-details-price">
                {{ selected_product.price }}$
            </div>
            <div class="product-details-text">
                {{ selected_product.full_description }}
            </div>
        </div>
    {% endif %}

</div>
</body>
</html>