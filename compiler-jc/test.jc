<html lang="en">
<head>
    <title>Product Page</title>
    <style>
        /* Page layout */
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1100px;
            margin: 30px auto;
            padding: 0 15px;
        }

        h1, h2 {
            margin-bottom: 15px;
            color: #333;
        }

        /* Product list grid */
        .product-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(230px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }

        .product-card {
            background-color: #fff;
            border-radius: 8px;
            padding: 15px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.08);
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        .product-card img {
            width: 100%;
            max-width: 200px;
            height: 180px;
            object-fit: cover;
            border-radius: 6px;
            margin-bottom: 10px;
        }

        .product-name {
            font-size: 1.05rem;
            font-weight: bold;
            margin-bottom: 5px;
            color: #222;
        }

        .product-price {
            font-size: 0.95rem;
            color: #27ae60;
            font-weight: bold;
            margin-bottom: 8px;
        }

        .product-short-details {
            font-size: 0.9rem;
            color: #666;
            margin-bottom: 10px;
        }

        .details-link {
            font-size: 0.9rem;
            color: #3498db;
            text-decoration: none;
            margin-top: auto;
        }

        .details-link:hover {
            text-decoration: underline;
        }

        /* Add product form */
        .form-card {
            background-color: #fff;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.08);
            margin-bottom: 40px;
        }

        .form-row {
            margin-bottom: 12px;
            display: flex;
            flex-direction: column;
        }

        .form-row label {
            font-size: 0.9rem;
            margin-bottom: 4px;
            color: #444;
        }

        .form-row input,
        .form-row textarea {
            border-radius: 4px;
            border: 1px solid #ccc;
            padding: 8px;
            font-size: 0.9rem;
        }

        .form-row textarea {
            resize: vertical;
            min-height: 70px;
        }

        .btn {
            display: inline-block;
            background-color: #3498db;
            color: #fff;
            border: none;
            border-radius: 4px;
            padding: 8px 14px;
            font-size: 0.9rem;
            cursor: pointer;
            margin-top: 5px;
        }

        .btn:hover {
            background-color: #2980b9;
        }

        /* Single product details section */
        .product-details {
            background-color: #fff;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.08);
            display: flex;
            gap: 20px;
            align-items: flex-start;
        }

        .product-details img {
            width: 280px;
            height: 260px;
            object-fit: cover;
            border-radius: 6px;
        }

        .product-details-info {
            flex: 1;
        }

        .product-details-info h2 {
            margin-top: 0;
        }

        .product-details-price {
            font-size: 1.1rem;
            color: #27ae60;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .product-details-text {
            font-size: 0.95rem;
            color: #555;
            white-space: pre-line; /* keep line breaks from description */
        }

    </style>
</head>
<body>
<div class="container">

    <!-- a. Display the product (list of products) -->
    <h1>All Products</h1>
    <div class="product-grid">
        {% for product in products %}
            <div class="product-card">
                <!-- product.image_url should be a URL/path to image -->
                <img src="{{ product.image_url }}" alt="{{ product.name }}">
                <div class="product-name">{{ product.name }}</div>
                <div class="product-price">${{ "%.2f"|format(product.price) }}</div>
                <div class="product-short-details">
                    {{ product.short_description }}
                </div>
                <a class="details-link" href="{{ url_for('product_details', product_id=product.id) }}">
                    View details
                </a>
            </div>
        {% else %}
            <p>No products available.</p>
        {% endfor %}
    </div>

    <!-- b. Add a product (simple form) -->
    <h2>Add a New Product</h2>
    <div class="form-card">
        <form action="{{ url_for('add_product') }}" method="post">
            <div class="form-row">
                <label for="name">Product Name</label>
                <input type="text" id="name" name="name" required>
            </div>

            <div class="form-row">
                <label for="price">Price</label>
                <input type="number" step="0.01" id="price" name="price" required>
            </div>

            <div class="form-row">
                <label for="image_url">Image URL</label>
                <input type="url" id="image_url" name="image_url" required>
            </div>

            <div class="form-row">
                <label for="short_description">Short Description</label>
                <input type="text" id="short_description" name="short_description">
            </div>

            <div class="form-row">
                <label for="full_description">Full Details</label>
                <textarea id="full_description" name="full_description"></textarea>
            </div>

            <button class="btn" type="submit">Add Product</button>
        </form>
    </div>

    <!-- c. Display product details (for one product) -->
    {% if selected_product %}
        <h2>Product Details</h2>
        <div class="product-details">
            <img src="{{ selected_product.image_url }}" alt="{{ selected_product.name }}">
            <div class="product-details-info">
                <h2>{{ selected_product.name }}</h2>
                <div class="product-details-price">
                    ${{ "%.2f"|format(selected_product.price) }}
                </div>
                <div class="product-details-text">
                    {{ selected_product.full_description }}
                </div>
            </div>
        </div>
    {% endif %}

</div>
</body>
</html>
